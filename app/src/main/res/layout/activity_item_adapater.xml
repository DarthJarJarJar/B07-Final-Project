<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_black_background"
            android:padding="8dp">

            <TextView
                android:id="@+id/number"
                android:layout_width="50dp"
                android:layout_height="46dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:text="#1"
                android:textAlignment="center"
                android:textColor="#FFD700"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title"
                android:layout_width="204dp"
                android:layout_height="49dp"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@id/number"
                android:text="A Tang ‘Sancai’ ‘Baoxianghua’ Box"
                android:textAlignment="center"
                android:textColor="#FFD700"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/circle_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp"
                android:buttonTint="#FFD700"
                android:checked="false"
                android:clickable="true" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/box_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/header"
            android:background="#D3D3D3" />

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/box_image"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="8dp">

            <TextView
                android:id="@+id/category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tang Dynasty"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/arrow_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>